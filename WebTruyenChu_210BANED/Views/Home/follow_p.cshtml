@model List< WebTruyenChu_210BANED.Models.StoryCard>
@{
    ViewData["Title"] = "Follow Page";
    int currentPage = ViewBag.CurrentPage ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}
<h2 class="label-p">@ViewData["Title"]</h2>

<div class="story-container">
    @foreach (var story in Model)
    {
        <div class="story-card">
            <a class="ui-card" href="@Url.Action("Details", "StoryCard", new { id = story.Id })">
                <img src="@story.ImageUrl" alt="@story.Title" />
                <div class="story-title">@story.Title</div>
            </a>
        </div>
    }
</div>

<!-- Pagination -->
<div class="pagination">
    <button class="page-button" onclick="location.href='@Url.Action("Index", "StoryCard", new { page = currentPage - 1 })'" @(currentPage == 1 ? "disabled" : "")>
        <
    </button>

    @for (int i = 1; i <= totalPages; i++)
    {
        <button class="page-button @(currentPage == i ? "active" : "")"
                onclick="location.href='@Url.Action("Index", "StoryCard", new { page = i })'">
            @i
        </button>
    }

    <button class="page-button" onclick="location.href='@Url.Action("Index", "StoryCard", new { page = currentPage + 1 })'" @(currentPage == totalPages ? "disabled" : "")>
        >
    </button>
</div>

<style>
    .label-p {
        margin-top: 15%;
    }

    .story-container {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
        padding: 10px;
    }

    .story-card {
        background-color: white;
        width: 150px;
        border: 1px solid #ccc;
        padding: 10px;
        text-align: center;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.2);
        font-size: 15px;
        font-weight: bold;
        margin-top: 15px;
    }

    .story-card:hover {
            transform: scale(1.1);
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.5);
     }

    .ui-card {
        text-decoration: none;
    }

    .story-card img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .story-title {
        font-style: normal;
        color: black !important;
    }

        .story-title:hover {
            color: blue !important;
        }

    .pagination {
        margin-top: 20px;
        display: flex;
        justify-content: center;
    }

    .page-button {
        padding: 10px;
        margin: 5px;
        border: none;
        cursor: pointer;
        background-color: #3ca4bc;
        color: white;
        border-radius: 5px;
    }

        .page-button:hover {
            background-color: darkorange;
            transform: scale(1.1);
        }

        .page-button:disabled {
            background-color: #ccc;
            cursor: not-allowed;
        }

        .page-button.active {
            background-color: #28a745;
        }
</style>