@model StoryCard

<div class="info-card-story-container">
    <div class="info-card-story">
        <img src="@Model.ImageUrl" alt="@Model.Title" class="story-image" />
       
        <div class="info-text if-t">
            <h2 class="story-title">@Model.Title</h2>
            <p class="story-genre">Thể loại: @Model.Genre</p>
            <div class="story-actions ">
                <a href="@Url.Action("Read", "Story", new { id = Model.FirstChapterId })" class="btn-custom btn-primary">
                    Đọc từ đầu
                </a>
                <a href="@Url.Action("Read", "Story", new { id = Model.LatestChapterId })" class="btn-custom btn-success">
                    Đọc mới nhất
                </a>
            </div>
        </div>
        <!--div class="list-chap-base">
            <div class="list-chap">
